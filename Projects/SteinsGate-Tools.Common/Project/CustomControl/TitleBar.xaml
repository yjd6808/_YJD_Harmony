<UserControl x:Class="SGToolsCommon.CustomControl.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SGToolsCommon.CustomControl"
             xmlns:p="clr-namespace:SGToolsCommon.Provider"
             xmlns:style="clr-namespace:SGToolsCommon.CustomStyle"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../CustomStyle/ImageButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--소스 설정을 해야 알림을 받음-->
            <TextBlock x:Name="_tbTitle" Text="{Binding Title, RelativeSource={RelativeSource  AncestorType={x:Type local:TitleBar}}}" VerticalAlignment="Center" FontSize="16"
                       Margin="5, 0, 0, 0">
            </TextBlock>
            <Button Grid.Column="1" Style="{StaticResource ImageButton}" Click="MinimizeOnClick">
                <style:ImageButtonProperty.Image>
                    <BitmapImage UriSource="/SGToolsCommon;component/Resource/Icon/win_minimize.ico"></BitmapImage>
                </style:ImageButtonProperty.Image>
            </Button>
            <Button Grid.Column="2" Style="{StaticResource ImageButton}" Click="MaximizeOnClick">
                <style:ImageButtonProperty.Image>
                    <BitmapImage UriSource="/SGToolsCommon;component/Resource/Icon/win_maximize.ico"></BitmapImage>
                </style:ImageButtonProperty.Image>
            </Button>
            <Button Grid.Column="3" Style="{StaticResource ImageButton}" Click="CloseOnClick">
                <style:ImageButtonProperty.Image>
                    <BitmapImage UriSource="/SGToolsCommon;component/Resource/Icon/win_close.ico"></BitmapImage>
                </style:ImageButtonProperty.Image>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
