<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Selection" TargetType="ItemsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ItemsControl">
                    <Canvas>
                        <Rectangle Width="{Binding Width, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}"
                                   Height="{Binding Height, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="StrokeDashArray"
                                            Value="1, 1" />
                                    <Setter Property="StrokeThickness"
                                            Value="2" />
                                    <Setter Property="Stroke"
                                            Value="Black" />
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>
                        <ItemsPresenter />
                        <Rectangle Fill="LawnGreen"
                                   Width="10"
                                   Height="10"
                                   Canvas.Top="-5"
                                   Canvas.Left="-5" />
                        <Rectangle Fill="LawnGreen"
                                   Width="10"
                                   Height="10"
                                   Canvas.Top="-5"
                                   Canvas.Right="-5" />
                        <Rectangle Fill="LawnGreen"
                                   Width="10"
                                   Height="10"
                                   Canvas.Bottom="-5"
                                   Canvas.Left="-5" />
                        <Rectangle Fill="LawnGreen"
                                   Width="10"
                                   Height="10"
                                   Canvas.Bottom="-5"
                                   Canvas.Right="-5" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>