<Application x:Class="SGToolsUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SGToolsUI"
             xmlns:style="clr-namespace:SGToolsCommon.CustomStyle;assembly=SGToolsCommon"
             StartupUri="View/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SGToolsCommon;Component/CustomStyle/All.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SGToolsCommon;Component/Converter/All.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SGToolsCommon;Component/Resource/R.xaml" />

                <ResourceDictionary Source="pack://application:,,,/SGToolsUI;Component/CustomStyle/All.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SGToolsUI;Component/Converter/All.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SGToolsUI;Component/ModelTemplate/All.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
