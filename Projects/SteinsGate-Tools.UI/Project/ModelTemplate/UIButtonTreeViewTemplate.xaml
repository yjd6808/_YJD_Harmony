<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mo="clr-namespace:SGToolsUI.Model">
    <DataTemplate x:Key="ButtonTreeViewTemplate" DataType="{x:Type mo:SGUIButton}">
        <StackPanel Orientation="Horizontal">
            <Image Width="16" Height="16" Source="/Resource/Icon/ui_button2.ico" Margin="0, 0, 4, 0"/>
            <TextBlock Text="{Binding VisualName}" />
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsVisible, Mode=OneWay}" Value="True">
                            <Setter Property="Opacity" Value="1"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsVisible, Mode=OneWay}" Value="False">
                            <Setter Property="Opacity" Value="0.5"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>