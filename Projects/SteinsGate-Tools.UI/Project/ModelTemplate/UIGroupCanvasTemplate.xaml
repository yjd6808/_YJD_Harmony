<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mo="clr-namespace:SGToolsUI.Model"
                    xmlns:vm="clr-namespace:SGToolsUI.ViewModel">
    <DataTemplate x:Key="GroupCanvasTemplate" DataType="{x:Type mo:SGUIGroup}">
        <Grid Width="{Binding VisualRect.Width}"
              Height="{Binding VisualRect.Height}"
              Canvas.Left="{Binding VisualRect.Left}"
              Canvas.Top="{Binding VisualRect.Top}">

            <TextBlock Text="fsefesfesfsfesfesfs"/>
            <Rectangle Fill="Gray" Opacity="0.6"/>

            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsVisible, Mode=OneWay}" Value="True">
                            <Setter Property="Opacity" Value="1"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsVisible, Mode=OneWay}" Value="False">
                            <Setter Property="Opacity" Value="1"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>
    </DataTemplate>
</ResourceDictionary>