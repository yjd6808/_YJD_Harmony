<ResourceDictionary x:Class="SGToolsUI.ModelTemplate.Main.UIScrollBarCanvasTemplate"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mo_main="clr-namespace:SGToolsUI.Model.Main"
                    xmlns:res="clr-namespace:SGToolsUI.Resource"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <DataTemplate x:Key="ScrollBarCanvasTemplate"
                  DataType="{x:Type mo_main:SGUIScrollBar}">
        <StackPanel>
            <Image Source="{Binding VisualUpSpriteSource}" Width="{Binding VisualSize.Width}" Height="{Binding VisualUpHeight}" Stretch="Fill"/>
            <Grid>
                <Image Source="{Binding VisualTrackSpriteSource}" Width="{Binding VisualSize.Width}" Height="{Binding TrackHeight}" Stretch="Fill"/>
                <Image Source="{Binding VisualThumbSpriteSource}" Width="{Binding VisualSize.Width}" Height="{Binding VisualThumbHeight}" VerticalAlignment="Top" Stretch="Fill"/>
            </Grid>
            <Image Source="{Binding VisualDownSpriteSource}" Width="{Binding VisualSize.Width}" Height="{Binding VisualDownHeight}" Stretch="Fill"/>
        </StackPanel>
        
        
        
    </DataTemplate>
</ResourceDictionary>