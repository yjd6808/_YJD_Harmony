<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mo_main="clr-namespace:SGToolsUI.Model.Main">
    <DataTemplate x:Key="LabelCanvasTemplate"
                  DataType="{x:Type mo_main:SGUILabel}">

        <Grid Width="{Binding VisualSize.Width}"
              Height="{Binding VisualSize.Height}">
            <TextBlock Text="{Binding Text}"
                       HorizontalAlignment="{Binding TextHAlign, Converter={StaticResource SGAlignmentWpfAlignmentConverter}}"
                       VerticalAlignment="{Binding TextVAlign, Converter={StaticResource SGAlignmentWpfAlignmentConverter}}"
                       FontSize="{Binding FontSize}"
                       Foreground="{Binding FontColor, Converter={StaticResource ColorSolidBrushConverter}}"
                       FontFamily="{Binding FontFamily}"
                       TextWrapping="{Binding TextWrapEnum}">
            </TextBlock>
        </Grid>
    </DataTemplate>
</ResourceDictionary>