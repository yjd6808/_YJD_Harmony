<ResourceDictionary x:Class="SGToolsUI.ModelTemplate.UIScrollBarCanvasTemplate"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mo="clr-namespace:SGToolsUI.Model"
                    xmlns:res="clr-namespace:SGToolsUI.Resource"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <DataTemplate x:Key="ScrollBarCanvasTemplate"
                  DataType="{x:Type mo:SGUIScrollBar}">
        <StackPanel>
            <Image Source="{Binding VisualUpSpriteSource}" Width="{Binding VisualSize.Width}"/>
            <Grid>
                <Image Source="{Binding VisualTrackSpriteSource}" Width="{Binding VisualSize.Width}"/>
                <Image Source="{Binding VisualThumbSpriteSource}" Width="{Binding VisualSize.Width}" VerticalAlignment="Top"/>
            </Grid>
            <Image Source="{Binding VisualDownSpriteSource}" Width="{Binding VisualSize.Width}"/>
        </StackPanel>
        
        
        
    </DataTemplate>
</ResourceDictionary>