<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<RootNamespace>SGToolsUI</RootNamespace>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<BaseIntermediateOutputPath>..\Intermediate\</BaseIntermediateOutputPath>
		<BaseOutputPath>..\Out\</BaseOutputPath>
		<AssemblyName>SGToolsUI</AssemblyName>
		<RunPostBuildEvent>Always</RunPostBuildEvent>
	</PropertyGroup>


	<ItemGroup>
		<None Remove="Resource\Icon\ui_button.ico" />
		<None Remove="Resource\Icon\ui_button2.ico" />
		<None Remove="Resource\Icon\ui_checkbox.ico" />
		<None Remove="Resource\Icon\ui_checkbox2.ico" />
		<None Remove="Resource\Icon\ui_editbox2.ico" />
		<None Remove="Resource\Icon\ui_group.ico" />
		<None Remove="Resource\Icon\ui_group_selected.ico" />
		<None Remove="Resource\Icon\ui_label.ico" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resource\Icon\ui_button.ico" />
		<Resource Include="Resource\Icon\ui_button2.ico" />
		<Resource Include="Resource\Icon\ui_checkbox.ico" />
		<Resource Include="Resource\Icon\ui_checkbox2.ico" />
		<Resource Include="Resource\Icon\ui_editbox2.ico" />
		<Resource Include="Resource\Icon\ui_group.ico" />
		<Resource Include="Resource\Icon\ui_group_selected.ico" />
		<Resource Include="Resource\Icon\ui_label.ico" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Custom\" />
	  <Folder Include="Resource\Font\" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Extended.Wpf.Toolkit" Version="4.5.0" />
	  <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
	  <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
	  <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\SteinsGate-Tools.Common\Project\SteinsGate-Tools.Common.csproj" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="xcopy /Y /Q &quot;$(SolutionDir)ThirdParty\Bass24\lib\$(Platform)\*.dll&quot; &quot;$(OutDir)&quot;&#xD;&#xA;xcopy /Y /Q &quot;$(SolutionDir)ThirdParty\Zlib12\lib\$(Platform)\*.dll&quot; &quot;$(OutDir)&quot;" />
	</Target>

</Project>
