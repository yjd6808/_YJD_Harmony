<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<RootNamespace>SGToolsUI</RootNamespace>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<BaseIntermediateOutputPath>..\Intermediate\</BaseIntermediateOutputPath>
		<BaseOutputPath>..\Out\</BaseOutputPath>
		<AssemblyName>SGToolsUI</AssemblyName>
		<RunPostBuildEvent>Always</RunPostBuildEvent>
	</PropertyGroup>


	<ItemGroup>
		<None Remove="Resource\Image\1.png" />
		<None Remove="Resource\Image\ui_button.ico" />
		<None Remove="Resource\Image\ui_button2.ico" />
		<None Remove="Resource\Image\ui_checkbox.ico" />
		<None Remove="Resource\Image\ui_checkbox2.ico" />
		<None Remove="Resource\Image\ui_editbox2.ico" />
		<None Remove="Resource\Image\ui_group.ico" />
		<None Remove="Resource\Image\ui_group_selected.ico" />
		<None Remove="Resource\Image\ui_label.ico" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resource\Image\1.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Resource>
		<Resource Include="Resource\Image\ui_button.ico" />
		<Resource Include="Resource\Image\ui_button2.ico" />
		<Resource Include="Resource\Image\ui_checkbox.ico" />
		<Resource Include="Resource\Image\ui_checkbox2.ico" />
		<Resource Include="Resource\Image\ui_editbox2.ico" />
		<Resource Include="Resource\Image\ui_group.ico" />
		<Resource Include="Resource\Image\ui_group_selected.ico" />
		<Resource Include="Resource\Image\ui_label.ico" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Resource\Font\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\SteinsGate-Tools.Common\Project\SteinsGate-Tools.Common.csproj" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="rd &quot;$(ProjectDir)obj&quot; /S /Q&#xD;&#xA;xcopy /Y /Q &quot;$(SolutionDir)ThirdParty\Bass24\lib\$(Platform)\*.dll&quot; &quot;$(OutDir)&quot;&#xD;&#xA;xcopy /Y /Q &quot;$(SolutionDir)ThirdParty\Zlib12\lib\$(Platform)\*.dll&quot; &quot;$(OutDir)&quot;" />
	</Target>

</Project>
